{
  "name": "calculadora-e2e",
  "version": "1.0.0",
  "description": "Proyecto de pruebas E2E para una calculadora web usando Playwright",
  "main": "index.js",
  "scripts": {
    "serve": "npx http-server . -p 3000 -c-1",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:ui": "npx playwright test --ui"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "calculadora",
    "automation"
  ],
  "author": "Estudiante E2E",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "http-server": "^14.1.1"
  }
}
